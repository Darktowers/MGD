/* registrate */ 
.registratex
    height: auto !important
    .back
        position: absolute
        top 0
        z-index: -1
        height: 100%
    .wrap
        text-align: center
        padding-top: 4em;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        .registrateTitle
            h2
                font-size: 5em
                text-align: center
                font-weight: lighter;
                margin: 0;
                box-sizing: border-box;
            p
                margin: 0
        .modalForm
            background: white;
            max-width: 800px;
            width: 100%;
            padding: 1em;
            box-sizing: border-box;
            min-height: 500px;
            border-radius: 10px;
            .formCont
                input[type=button]
                input[type=submit]
                    border: 0;
                    background: #fe2b5d;
                    color: white;
                    padding: 1.5em 3em;
                    font-size: 1.2em;
                    border-radius: 9px;
                    outline: 0;
                    margin .5em
                    cursor: pointer
                    transition: all .3s ease-in-out
                    &:hover
                        background: #2feab1;
                input[type=text]
                input[type=email]
                    border: 0;
                    background: #EEEEEE;
                    outline: 0;
                    padding: .8em;
                    box-sizing: border-box;
                    margin: .5em;
                    font-size: 1.3em;
                    border-radius: 6px;
                .check
                    text-align: left
                    padding: 1em 2em;
                    a
                        color: #fe2b5d;
                        text-decoration: none;
                        transition all .3s ease-in-out
                        &:hover
                            color: #2feab1;
                            text-decoration: underline;
                .textVer
                    text-align: left
                    padding: 0 2em;
.contPop
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 150, 136, 0.65);
    top: 0;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    display: none
    .pop
        min-height: 300px;
        max-width: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background: white;
        padding: 1em;
        box-sizing: border-box;
        border-radius: 12px;
        position: relative;
        .close
            position: absolute;
            top: -2em;
            font-size: 1.5em;
            right: -2em;
            padding: .8em 1.1em;
            color: #E91E63;
            cursor: pointer;
            background: white;
            border-radius: 50%;
            z-index: 3;
            border: 1px solid #ccc;
        .content
            text-align: center;
            form
                display: flex;
                flex-direction: column;
                align-items: center;
            i
                font-size: 5em;
                color: #4CAF50;
            p
                font-size: 1.1em;
            input[type=button]
                border: 0;
                background: #fe2b5d;
                color: #fff;
                padding: 1em 3em;
                font-size: 1.2em;
                -webkit-border-radius: 9px;
                border-radius: 9px;
                outline: 0;
                margin: .5em;
                cursor: pointer;
                -webkit-transition: all 0.3s ease-in-out;
                -moz-transition: all 0.3s ease-in-out;
                -o-transition: all 0.3s ease-in-out;
                -ms-transition: all 0.3s ease-in-out;
                transition: all 0.3s ease-in-out;
